@model Profiles.Web.Models.PendingRequestsViewModel
@{
    ViewData["Title"] = "Pending Requests - " + Model.TeamNameFilter;
    var teamSlug = ViewData["TeamSlug"]?.ToString();
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Team" asp-action="Index">Teams</a></li>
        <li class="breadcrumb-item"><a asp-controller="Team" asp-action="Details" asp-route-slug="@teamSlug">@Model.TeamNameFilter</a></li>
        <li class="breadcrumb-item active" aria-current="page">Pending Requests</li>
    </ol>
</nav>

<h1>Pending Requests</h1>
<p class="text-muted">Team: @Model.TeamNameFilter</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Requests.Any())
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Applicant</th>
                        <th>Message</th>
                        <th>Requested</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model.Requests)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(request.UserProfilePictureUrl))
                                    {
                                        <img src="@request.UserProfilePictureUrl" alt="" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                            <span class="text-white small">@request.UserDisplayName[0]</span>
                                        </div>
                                    }
                                    <div>
                                        <strong>@request.UserDisplayName</strong><br>
                                        <small class="text-muted">@request.UserEmail</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(request.Message))
                                {
                                    <span>@(request.Message.Length > 100 ? request.Message.Substring(0, 100) + "..." : request.Message)</span>
                                }
                                else
                                {
                                    <span class="text-muted">No message</span>
                                }
                            </td>
                            <td>@request.RequestedAt.ToString("MMM d, yyyy HH:mm")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <form asp-action="ApproveRequest" asp-route-slug="@teamSlug" asp-route-requestId="@request.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Approve this request?')">Approve</button>
                                    </form>
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal-@request.Id">
                                        Reject
                                    </button>
                                </div>

                                <!-- Reject Modal -->
                                <div class="modal fade" id="rejectModal-@request.Id" tabindex="-1" aria-labelledby="rejectModalLabel-@request.Id" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form asp-action="RejectRequest" asp-route-slug="@teamSlug" asp-route-requestId="@request.Id" method="post">
                                                @Html.AntiForgeryToken()
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="rejectModalLabel-@request.Id">Reject Request</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Rejecting request from <strong>@request.UserDisplayName</strong></p>
                                                    <div class="mb-3">
                                                        <label for="notes-@request.Id" class="form-label">Reason for rejection (required)</label>
                                                        <textarea name="Notes" id="notes-@request.Id" class="form-control" rows="3" required></textarea>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-danger">Reject Request</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        No pending requests at this time.
    </div>
}

<div class="mt-3">
    <a asp-controller="Team" asp-action="Details" asp-route-slug="@teamSlug" class="btn btn-outline-secondary">Back to Team</a>
</div>
