@model Profiles.Web.Models.ProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="row">
    <div class="col-md-8">
        <h1>Edit Profile</h1>

        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <hr />
                    <h5>Phone</h5>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label asp-for="PhoneCountryCode" class="form-label"></label>
                            <select asp-for="PhoneCountryCode" class="form-select">
                                <option value="">Select</option>
                                <option value="+34">+34 (Spain)</option>
                                <option value="+33">+33 (France)</option>
                                <option value="+49">+49 (Germany)</option>
                                <option value="+39">+39 (Italy)</option>
                                <option value="+351">+351 (Portugal)</option>
                                <option value="+44">+44 (UK)</option>
                                <option value="+1">+1 (US/Canada)</option>
                                <option value="+31">+31 (Netherlands)</option>
                                <option value="+32">+32 (Belgium)</option>
                                <option value="+41">+41 (Switzerland)</option>
                                <option value="+43">+43 (Austria)</option>
                                <option value="+48">+48 (Poland)</option>
                                <option value="+52">+52 (Mexico)</option>
                                <option value="+54">+54 (Argentina)</option>
                                <option value="+55">+55 (Brazil)</option>
                                <option value="+56">+56 (Chile)</option>
                                <option value="+57">+57 (Colombia)</option>
                            </select>
                            <span asp-validation-for="PhoneCountryCode" class="text-danger"></span>
                        </div>
                        <div class="col-md-9">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="e.g., 612 345 678" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <hr />
                    <h5>Location</h5>

                    <div class="mb-3">
                        <label for="locationSearch" class="form-label">City</label>
                        <input type="text" id="locationSearch" class="form-control"
                               placeholder="Start typing your city..."
                               value="@Model.LocationDisplay"
                               autocomplete="off" />
                        <div class="form-text">Search for your city to set your location.</div>

                        <input type="hidden" asp-for="City" id="City" />
                        <input type="hidden" asp-for="CountryCode" id="CountryCode" />
                        <input type="hidden" asp-for="Latitude" id="Latitude" />
                        <input type="hidden" asp-for="Longitude" id="Longitude" />
                        <input type="hidden" asp-for="PlaceId" id="PlaceId" />
                    </div>

                    @if (!string.IsNullOrEmpty(Model.City))
                    {
                        <div class="mb-3">
                            <small class="text-muted">
                                Current location: <strong>@Model.City, @Model.CountryCode</strong>
                                @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
                                {
                                    <text> (@Model.Latitude.Value.ToString("F4"), @Model.Longitude.Value.ToString("F4"))</text>
                                }
                            </small>
                        </div>
                    }

                    <hr />

                    <div class="mb-3">
                        <label asp-for="Bio" class="form-label"></label>
                        <textarea asp-for="Bio" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Bio" class="text-danger"></span>
                        <div class="form-text">Tell us a bit about yourself.</div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @if (!string.IsNullOrEmpty(ViewData["GoogleMapsApiKey"]?.ToString()))
    {
        <script type="module">
            import { APILoader } from 'https://unpkg.com/@@googlemaps/extended-component-library@@0.6';

            const loader = new APILoader({
                apiKey: '@ViewData["GoogleMapsApiKey"]',
                version: 'weekly'
            });

            await loader.load();

            const input = document.getElementById("locationSearch");

            // Create the autocomplete element
            const autocomplete = document.createElement('gmp-place-autocomplete');
            autocomplete.id = 'place-autocomplete';
            autocomplete.placeholder = 'Start typing your city...';
            autocomplete.className = 'form-control';
            autocomplete.style.cssText = 'width: 100%; height: 38px;';

            // Set to only return cities
            autocomplete.types = ['(cities)'];

            // Replace the input with the autocomplete
            input.parentNode.replaceChild(autocomplete, input);

            // Set initial value if exists
            const currentLocation = '@Model.LocationDisplay';
            if (currentLocation) {
                autocomplete.value = currentLocation;
            }

            // Listen for place selection
            autocomplete.addEventListener('gmp-placeselect', async (event) => {
                const place = event.place;

                // Fetch full place details with only the fields we need
                await place.fetchFields({
                    fields: ['location', 'addressComponents', 'id']
                });

                // Extract city and country from address components
                let city = '';
                let countryCode = '';

                if (place.addressComponents) {
                    for (const component of place.addressComponents) {
                        if (component.types.includes('locality')) {
                            city = component.longText;
                        } else if (component.types.includes('administrative_area_level_1') && !city) {
                            city = component.longText;
                        }
                        if (component.types.includes('country')) {
                            countryCode = component.shortText;
                        }
                    }
                }

                // Populate hidden fields
                document.getElementById('City').value = city;
                document.getElementById('CountryCode').value = countryCode;
                document.getElementById('Latitude').value = place.location?.lat() || '';
                document.getElementById('Longitude').value = place.location?.lng() || '';
                document.getElementById('PlaceId').value = place.id || '';
            });
        </script>
        <style>
            gmp-place-autocomplete {
                --gmp-mat-background-color: #fff;
                --gmp-mat-input-font-size: 1rem;
            }
        </style>
    }
    else
    {
        <script>
            console.warn("Google Maps API key not configured. Location autocomplete disabled.");
        </script>
    }
}
