@model Profiles.Web.Models.JoinTeamViewModel
@{
    ViewData["Title"] = string.Format(Localizer["JoinTeam_Title"].Value, Model.TeamName);
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">@Localizer["Teams_Title"]</a></li>
        <li class="breadcrumb-item"><a asp-action="Details" asp-route-slug="@Model.TeamSlug">@Model.TeamName</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Localizer["JoinTeam_Join"]</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">@string.Format(Localizer["JoinTeam_Title"].Value, Model.TeamName)</h4>
            </div>
            <div class="card-body">
                @if (Model.RequiresApproval)
                {
                    <div class="alert alert-info">
                        @Localizer["JoinTeam_RequiresApproval"]
                    </div>

                    <form asp-action="Join" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="TeamId" />
                        <input type="hidden" asp-for="TeamName" />
                        <input type="hidden" asp-for="RequiresApproval" />

                        <div class="mb-3">
                            <label asp-for="Message" class="form-label">@Localizer["JoinTeam_MessageLabel"]</label>
                            <textarea asp-for="Message" class="form-control" rows="4" placeholder="@Localizer["JoinTeam_MessagePlaceholder"].Value"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">@Localizer["JoinTeam_SubmitRequest"]</button>
                            <a asp-action="Details" asp-route-slug="@Model.TeamSlug" class="btn btn-outline-secondary">@Localizer["Common_Cancel"]</a>
                        </div>
                    </form>
                }
                else
                {
                    <p>@Localizer["JoinTeam_NoApprovalNeeded"]</p>

                    <form asp-action="Join" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="TeamId" />
                        <input type="hidden" asp-for="TeamName" />
                        <input type="hidden" asp-for="RequiresApproval" />

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">@Localizer["JoinTeam_JoinTeamButton"]</button>
                            <a asp-action="Details" asp-route-slug="@Model.TeamSlug" class="btn btn-outline-secondary">@Localizer["Common_Cancel"]</a>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
