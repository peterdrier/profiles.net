@model Profiles.Web.Models.MyTeamsViewModel
@{
    ViewData["Title"] = "My Teams";
}

<h1>My Teams</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Memberships.Any())
{
    <div class="card mb-4">
        <div class="card-header">Team Memberships</div>
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Team</th>
                        <th>Role</th>
                        <th>Joined</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var membership in Model.Memberships)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-slug="@membership.TeamSlug">@membership.TeamName</a>
                                @if (membership.IsSystemTeam)
                                {
                                    <span class="badge bg-secondary ms-1">System</span>
                                }
                            </td>
                            <td>
                                @if (membership.IsMetalead)
                                {
                                    <span class="badge bg-primary">Metalead</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Member</span>
                                }
                            </td>
                            <td>@membership.JoinedAt.ToString("MMM d, yyyy")</td>
                            <td>
                                <a asp-action="Details" asp-route-slug="@membership.TeamSlug" class="btn btn-sm btn-outline-primary">View</a>
                                @if (membership.IsMetalead)
                                {
                                    <a asp-controller="TeamAdmin" asp-action="Members" asp-route-slug="@membership.TeamSlug" class="btn btn-sm btn-outline-secondary">
                                        Manage
                                        @if (membership.PendingRequestCount > 0)
                                        {
                                            <span class="badge bg-warning ms-1">@membership.PendingRequestCount</span>
                                        }
                                    </a>
                                }
                                @if (membership.CanLeave)
                                {
                                    <form asp-action="Leave" asp-route-slug="@membership.TeamSlug" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to leave @membership.TeamName?')">
                                            Leave
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        You are not a member of any teams yet. <a asp-action="Index">Browse teams</a> to join one.
    </div>
}

@if (Model.PendingRequests.Any())
{
    <div class="card">
        <div class="card-header">Pending Requests</div>
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Team</th>
                        <th>Status</th>
                        <th>Requested</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model.PendingRequests)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-slug="@request.TeamSlug">@request.TeamName</a>
                            </td>
                            <td>
                                <span class="badge @request.StatusBadgeClass">@request.Status</span>
                            </td>
                            <td>@request.RequestedAt.ToString("MMM d, yyyy")</td>
                            <td>
                                <form asp-action="WithdrawRequest" asp-route-id="@request.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to withdraw this request?')">
                                        Withdraw
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
