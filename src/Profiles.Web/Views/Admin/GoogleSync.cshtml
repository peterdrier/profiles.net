@model Profiles.Web.Models.GoogleSyncViewModel
@{
    ViewData["Title"] = "Google Sync Status";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Google Sync Status</h1>
    <form asp-action="GoogleSyncApply" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary" onclick="return confirm('This will sync all Google resources now. Continue?')">
            Sync Now
        </button>
    </form>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h2 class="card-title mb-0">@Model.TotalResources</h2>
                <p class="card-text text-muted">Total Resources</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h2 class="card-title mb-0 text-success">@Model.InSyncCount</h2>
                <p class="card-text text-muted">In Sync</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center @(Model.DriftCount > 0 ? "border-warning" : "")">
            <div class="card-body">
                <h2 class="card-title mb-0 text-warning">@Model.DriftCount</h2>
                <p class="card-text text-muted">Drifted</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center @(Model.ErrorCount > 0 ? "border-danger" : "")">
            <div class="card-body">
                <h2 class="card-title mb-0 text-danger">@Model.ErrorCount</h2>
                <p class="card-text text-muted">Errors</p>
            </div>
        </div>
    </div>
</div>

@if (!Model.Resources.Any())
{
    <div class="alert alert-info">
        No active Google resources found.
    </div>
}
else
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Resource</th>
                        <th>Type</th>
                        <th>Team</th>
                        <th>Status</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var resource in Model.Resources)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(resource.Url))
                                {
                                    <a href="@resource.Url" target="_blank">@resource.ResourceName</a>
                                }
                                else
                                {
                                    @resource.ResourceName
                                }
                            </td>
                            <td>
                                @if (resource.ResourceType == "Group")
                                {
                                    <span class="badge bg-info">Group</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Drive</span>
                                }
                            </td>
                            <td>@resource.TeamName</td>
                            <td>
                                @if (resource.ErrorMessage != null)
                                {
                                    <span class="badge bg-danger">Error</span>
                                }
                                else if (resource.IsInSync)
                                {
                                    <span class="badge bg-success">In Sync</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Drifted</span>
                                }
                            </td>
                            <td>
                                @if (resource.ErrorMessage != null)
                                {
                                    <span class="text-danger">@resource.ErrorMessage</span>
                                }
                                else if (!resource.IsInSync)
                                {
                                    @if (resource.MembersToAdd.Count > 0)
                                    {
                                        <div class="mb-1">
                                            <strong class="text-success">Add (@resource.MembersToAdd.Count):</strong>
                                            @string.Join(", ", resource.MembersToAdd)
                                        </div>
                                    }
                                    @if (resource.MembersToRemove.Count > 0)
                                    {
                                        <div>
                                            <strong class="text-danger">Remove (@resource.MembersToRemove.Count):</strong>
                                            @string.Join(", ", resource.MembersToRemove)
                                        </div>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">--</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to Dashboard</a>
</div>
