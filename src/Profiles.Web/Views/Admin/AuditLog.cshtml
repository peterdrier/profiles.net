@model Profiles.Web.Models.AuditLogListViewModel
@{
    ViewData["Title"] = "Audit Log";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Audit Log</h1>
    <form asp-action="CheckDriveActivity" method="post" class="d-inline" id="checkForm">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-outline-warning" id="checkBtn">
            Check Drive Activity Now
        </button>
    </form>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.AnomalyCount > 0)
{
    <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
        <strong class="me-2">@Model.AnomalyCount anomalous permission change(s) detected.</strong>
        <a asp-action="AuditLog" asp-route-filter="AnomalousPermissionDetected" class="alert-link">View all</a>
    </div>
}

<div class="mb-3">
    <div class="btn-group" role="group">
        <a asp-action="AuditLog" class="btn btn-sm @(string.IsNullOrEmpty(Model.ActionFilter) ? "btn-primary" : "btn-outline-primary")">
            All
        </a>
        <a asp-action="AuditLog" asp-route-filter="AnomalousPermissionDetected"
           class="btn btn-sm @(string.Equals(Model.ActionFilter, "AnomalousPermissionDetected", StringComparison.Ordinal) ? "btn-warning" : "btn-outline-warning")">
            Anomalous Permissions
            @if (Model.AnomalyCount > 0)
            {
                <span class="badge bg-danger ms-1">@Model.AnomalyCount</span>
            }
        </a>
        <a asp-action="AuditLog" asp-route-filter="GoogleResourceAccessGranted"
           class="btn btn-sm @(string.Equals(Model.ActionFilter, "GoogleResourceAccessGranted", StringComparison.Ordinal) ? "btn-primary" : "btn-outline-primary")">
            Access Granted
        </a>
        <a asp-action="AuditLog" asp-route-filter="GoogleResourceAccessRevoked"
           class="btn btn-sm @(string.Equals(Model.ActionFilter, "GoogleResourceAccessRevoked", StringComparison.Ordinal) ? "btn-primary" : "btn-outline-primary")">
            Access Revoked
        </a>
        <a asp-action="AuditLog" asp-route-filter="MemberSuspended"
           class="btn btn-sm @(string.Equals(Model.ActionFilter, "MemberSuspended", StringComparison.Ordinal) ? "btn-primary" : "btn-outline-primary")">
            Suspensions
        </a>
        <a asp-action="AuditLog" asp-route-filter="RoleAssigned"
           class="btn btn-sm @(string.Equals(Model.ActionFilter, "RoleAssigned", StringComparison.Ordinal) ? "btn-primary" : "btn-outline-primary")">
            Roles
        </a>
    </div>
</div>

@if (Model.Entries.Count == 0)
{
    <div class="alert alert-info">
        No audit log entries found.
    </div>
}
else
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Action</th>
                        <th>Description</th>
                        <th>Actor</th>
                        <th>When</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in Model.Entries)
                    {
                        var rowClass = string.Equals(entry.Action, "AnomalousPermissionDetected", StringComparison.Ordinal)
                            ? "table-warning" : "";
                        <tr class="@rowClass">
                            <td>
                                @if (string.Equals(entry.Action, "AnomalousPermissionDetected", StringComparison.Ordinal))
                                {
                                    <span class="badge bg-warning text-dark">Anomaly</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@entry.Action</span>
                                }
                            </td>
                            <td>@entry.Description</td>
                            <td>
                                @if (entry.IsSystemAction)
                                {
                                    <span class="badge bg-info">System</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Admin</span>
                                }
                                <span class="ms-1">@entry.ActorName</span>
                            </td>
                            <td class="text-nowrap">@entry.OccurredAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@{
    var totalPages = (int)Math.Ceiling(Model.TotalCount / (double)Model.PageSize);
}
@if (totalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            @for (var i = 1; i <= totalPages && i <= 10; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a asp-action="AuditLog" asp-route-filter="@Model.ActionFilter" asp-route-page="@i" class="page-link">@i</a>
                </li>
            }
            @if (totalPages > 10)
            {
                <li class="page-item disabled"><span class="page-link">...</span></li>
            }
        </ul>
    </nav>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to Dashboard</a>
</div>

@section Scripts {
<script>
    document.getElementById('checkForm').addEventListener('submit', function (e) {
        if (!confirm('This will check Drive Activity API for anomalous permission changes. Continue?')) {
            e.preventDefault();
            return;
        }
        var btn = document.getElementById('checkBtn');
        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>Checking\u2026';
    });
</script>
}
