@model Humans.Web.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = Localizer["AdminDashboard_Title"].Value;
}

<h1>@Localizer["AdminDashboard_Title"]</h1>

<div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-3 mb-4">
    <div class="col">
        <div class="card text-center h-100">
            <div class="card-body">
                <h2 class="card-title mb-0">@Model.TotalMembers</h2>
                <p class="card-text text-muted">@Localizer["Admin_TotalMembers"]</p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center h-100">
            <div class="card-body">
                <h2 class="card-title mb-0 text-success">@Model.ActiveMembers</h2>
                <p class="card-text text-muted">@Localizer["Admin_ActiveMembers"]</p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center h-100 @(Model.PendingVolunteers > 0 ? "border-warning" : "")">
            <div class="card-body">
                <h2 class="card-title mb-0 text-warning">@Model.PendingVolunteers</h2>
                <p class="card-text text-muted">@Localizer["Admin_PendingVolunteers"]</p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center h-100">
            <div class="card-body">
                <h2 class="card-title mb-0 text-warning">@Model.PendingApplications</h2>
                <p class="card-text text-muted">@Localizer["Admin_PendingApplications"]</p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-center h-100 @(Model.PendingConsents > 0 ? "border-warning" : "")">
            <div class="card-body">
                <h2 class="card-title mb-0 @(Model.PendingConsents > 0 ? "text-warning" : "text-success")">@Model.PendingConsents</h2>
                <p class="card-text text-muted">@Localizer["Admin_PendingConsents"]</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>@Localizer["Admin_QuickActions"]</span>
            </div>
            <div class="list-group list-group-flush">
                <a asp-action="Humans" asp-route-filter="pending" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    @Localizer["Admin_ReviewPendingVolunteers"]
                    @if (Model.PendingVolunteers > 0)
                    {
                        <span class="badge bg-warning">@Model.PendingVolunteers</span>
                    }
                </a>
                <a asp-action="Applications" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    @Localizer["Admin_ReviewApplications"]
                    @if (Model.PendingApplications > 0)
                    {
                        <span class="badge bg-warning">@Model.PendingApplications</span>
                    }
                </a>
                <a asp-action="Humans" class="list-group-item list-group-item-action">
                    @Localizer["Admin_ManageMembers"]
                </a>
                <a asp-action="Teams" class="list-group-item list-group-item-action">
                    @Localizer["Admin_ManageTeams"]
                </a>
                <a asp-action="Roles" class="list-group-item list-group-item-action">
                    @Localizer["Admin_ManageRoles"]
                </a>
                <a asp-controller="AdminLegalDocuments" asp-action="LegalDocuments" class="list-group-item list-group-item-action">
                    Legal Documents
                </a>
                <a asp-action="GoogleSync" class="list-group-item list-group-item-action">
                    @Localizer["Admin_GoogleSyncStatus"]
                </a>
                <a asp-action="AuditLog" class="list-group-item list-group-item-action">
                    Audit Log
                </a>
                <a asp-action="EmailPreview" class="list-group-item list-group-item-action">
                    Email Preview
                </a>
                <a asp-action="Configuration" class="list-group-item list-group-item-action">
                    Configuration Status
                </a>
                <a href="/hangfire" class="list-group-item list-group-item-action">
                    @Localizer["Admin_BackgroundJobs"]
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">@Localizer["Admin_SystemHealth"]</div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <span class="badge bg-success me-2">OK</span>
                        @Localizer["Admin_DatabaseConnection"]
                    </li>
                    <li class="mb-2">
                        <span class="badge bg-success me-2">OK</span>
                        @Localizer["Admin_BackgroundJobs"]
                    </li>
                    <li>
                        <a href="/health/ready" target="_blank">@Localizer["Admin_ViewHealthCheck"]</a>
                    </li>
                </ul>
                <hr />
                <form asp-action="SyncSystemTeams" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-arrow-repeat me-1"></i>Sync System Teams
                    </button>
                    <small class="text-muted d-block mt-1">Recalculates Volunteers, Leads, and Board team membership.</small>
                </form>
            </div>
        </div>
        </div>

        @if (Model.TotalApplications > 0)
        {
            <div class="card mt-3">
                <div class="card-header">@Localizer["Admin_ApplicationStats"]</div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-7">@Localizer["Admin_StatsTotal"]</dt>
                        <dd class="col-5 text-end mb-2">@Model.TotalApplications</dd>
                        <dt class="col-7">@Localizer["Admin_StatsApproved"]</dt>
                        <dd class="col-5 text-end mb-2">@Model.ApprovedApplications</dd>
                        <dt class="col-7">@Localizer["Admin_StatsRejected"]</dt>
                        <dd class="col-5 text-end mb-2">@Model.RejectedApplications</dd>
                        <dt class="col-7">@Localizer["Admin_StatsPending"]</dt>
                        <dd class="col-5 text-end mb-2">@(Model.TotalApplications - Model.ApprovedApplications - Model.RejectedApplications)</dd>
                    </dl>
                    <hr class="my-2" />
                    <dl class="row mb-0">
                        <dt class="col-7">Colaborador</dt>
                        <dd class="col-5 text-end mb-2">@Model.ColaboradorApplied</dd>
                        <dt class="col-7">Asociado</dt>
                        <dd class="col-5 text-end mb-2">@Model.AsociadoApplied</dd>
                    </dl>
                    @{
                        var approvalRate = Model.TotalApplications > 0
                            ? (int)Math.Round(100.0 * Model.ApprovedApplications / Model.TotalApplications)
                            : 0;
                    }
                    <hr class="my-2" />
                    <dl class="row mb-0">
                        <dt class="col-7">@Localizer["Admin_StatsApprovalRate"]</dt>
                        <dd class="col-5 text-end mb-0">@approvalRate%</dd>
                    </dl>
                </div>
            </div>
        }
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">@Localizer["Admin_RecentActivity"]</div>
            <div class="card-body">
                @if (Model.RecentActivity.Count == 0)
                {
                    <p class="text-muted mb-0">@Localizer["Admin_NoRecentActivity"]</p>
                }
                else
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var activity in Model.RecentActivity)
                        {
                            <li class="mb-2 d-flex justify-content-between align-items-start">
                                <div>
                                    <span class="badge bg-secondary me-2">@activity.Type</span>
                                    @activity.Description
                                </div>
                                <small class="text-muted text-nowrap ms-3">@activity.Timestamp.ToString("g")</small>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>
