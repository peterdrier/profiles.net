@model Humans.Web.Models.GoogleSyncViewModel
@{
    ViewData["Title"] = Localizer["AdminGoogleSync_Title"].Value;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Localizer["AdminGoogleSync_Title"]</h1>
    <form asp-action="GoogleSyncApply" method="post" class="d-inline" id="syncForm">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary" id="syncBtn">
            @Localizer["GoogleSync_SyncNow"]
        </button>
    </form>
</div>

<vc:temp-data-alerts />

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h2 class="card-title mb-0">@Model.TotalResources</h2>
                <p class="card-text text-muted">@Localizer["GoogleSync_TotalResources"]</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h2 class="card-title mb-0 text-success">@Model.InSyncCount</h2>
                <p class="card-text text-muted">@Localizer["GoogleSync_InSync"]</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center @(Model.DriftCount > 0 ? "border-warning" : "")">
            <div class="card-body">
                <h2 class="card-title mb-0 text-warning">@Model.DriftCount</h2>
                <p class="card-text text-muted">@Localizer["GoogleSync_Drifted"]</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center @(Model.ErrorCount > 0 ? "border-danger" : "")">
            <div class="card-body">
                <h2 class="card-title mb-0 text-danger">@Model.ErrorCount</h2>
                <p class="card-text text-muted">@Localizer["GoogleSync_Errors"]</p>
            </div>
        </div>
    </div>
</div>

@if (!Model.Resources.Any())
{
    <div class="alert alert-info">
        @Localizer["GoogleSync_NoResources"]
    </div>
}
else
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>@Localizer["GoogleSync_Resource"]</th>
                        <th>@Localizer["AdminTeams_Type"]</th>
                        <th>@Localizer["MyTeams_Team"]</th>
                        <th>@Localizer["Common_Status"]</th>
                        <th>@Localizer["GoogleSync_Details"]</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var resource in Model.Resources)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(resource.Url))
                                {
                                    <a href="@resource.Url" target="_blank">@resource.ResourceName</a>
                                }
                                else
                                {
                                    @resource.ResourceName
                                }
                            </td>
                            <td>
                                @if (resource.ResourceType == "Group")
                                {
                                    <span class="badge bg-info">Group</span>
                                }
                                else if (resource.ResourceType == "DriveFile")
                                {
                                    <span class="badge bg-warning text-dark">Drive File</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Drive Folder</span>
                                }
                            </td>
                            <td>@resource.TeamName</td>
                            <td>
                                @if (resource.ErrorMessage != null)
                                {
                                    <span class="badge bg-danger">Error</span>
                                }
                                else if (resource.IsInSync)
                                {
                                    <span class="badge bg-success">In Sync</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Drifted</span>
                                }
                            </td>
                            <td>
                                @if (resource.ErrorMessage != null)
                                {
                                    <span class="text-danger">@resource.ErrorMessage</span>
                                }
                                else if (!resource.IsInSync)
                                {
                                    @if (resource.MembersToAdd.Count > 0)
                                    {
                                        <div class="mb-1">
                                            <strong class="text-success">Add (@resource.MembersToAdd.Count):</strong>
                                            @string.Join(", ", resource.MembersToAdd)
                                        </div>
                                    }
                                    @if (resource.MembersToRemove.Count > 0)
                                    {
                                        <div>
                                            <strong class="text-danger">Remove (@resource.MembersToRemove.Count):</strong>
                                            @string.Join(", ", resource.MembersToRemove)
                                        </div>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">--</span>
                                }
                            </td>
                            <td>
                                <a asp-action="GoogleSyncResourceAudit" asp-route-id="@resource.ResourceId"
                                   class="btn btn-sm btn-outline-secondary">Audit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["GoogleSync_BackToDashboard"]</a>
</div>

@section Scripts {
<script>
    document.getElementById('syncForm').addEventListener('submit', function (e) {
        if (!confirm('This will sync all Google resources now. Continue?')) {
            e.preventDefault();
            return;
        }
        var btn = document.getElementById('syncBtn');
        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>Syncing\u2026';
    });
</script>
}
