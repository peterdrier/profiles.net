@model Humans.Web.Models.ApplicationCreateViewModel
@{
    ViewData["Title"] = Localizer["GovernanceApplication_Title"].Value;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">@Localizer["Governance_Title"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Localizer["GovernanceCreate_NewApplication"]</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-8">
        <h1>@Localizer["Governance_ApplyButton"]</h1>
        <p class="lead text-muted">@Localizer["GovernanceCreate_Lead"]</p>

        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-4">
                        <label asp-for="Motivation" class="form-label"></label>
                        <textarea asp-for="Motivation" class="form-control" rows="6"
                            placeholder="@Localizer["GovernanceCreate_MotivationPlaceholder"].Value"></textarea>
                        <span asp-validation-for="Motivation" class="text-danger"></span>
                        <div class="form-text">@Localizer["GovernanceCreate_MotivationHelp"]</div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="AdditionalInfo" class="form-label"></label>
                        <textarea asp-for="AdditionalInfo" class="form-control" rows="3"
                            placeholder="@Localizer["GovernanceCreate_AdditionalInfoPlaceholder"].Value"></textarea>
                        <span asp-validation-for="AdditionalInfo" class="text-danger"></span>
                        <div class="form-text">@Localizer["GovernanceCreate_AdditionalInfoHelp"]</div>
                    </div>

                    <hr />

                    <div class="form-check mb-4">
                        <input asp-for="ConfirmAccuracy" class="form-check-input" type="checkbox">
                        <label asp-for="ConfirmAccuracy" class="form-check-label">
                            @Localizer["GovernanceCreate_ConfirmAccuracy"]
                        </label>
                        <span asp-validation-for="ConfirmAccuracy" class="text-danger d-block"></span>
                    </div>

                    <p class="text-danger fw-semibold mb-3">Asociado applications will be available soon.</p>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["Common_Cancel"]</a>
                        <button type="submit" class="btn btn-primary" disabled>@Localizer["GovernanceCreate_SubmitApplication"]</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header">@Localizer["GovernanceCreate_IsThisRightForMe"]</div>
            <div class="card-body">
                <p class="mb-2"><strong>@Localizer["GovernanceCreate_IdealFor"]</strong></p>
                <ul class="mb-2">
                    <li>@Localizer["Governance_CampLeads"]</li>
                    <li>@Localizer["Governance_MetaVolunteers"]</li>
                    <li>@Localizer["Governance_LongTermMembers"]</li>
                </ul>
                <p class="mb-2 text-muted"><small>@Localizer["Governance_BoardReviews"]</small></p>
                <p class="mb-0 text-muted"><small>@Localizer["Governance_NoteNotRequired"]</small></p>
            </div>
        </div>
        <div class="card">
            <div class="card-header">@Localizer["GovernanceCreate_WhatHappensNext"]</div>
            <div class="card-body">
                <ol class="mb-0">
                    <li class="mb-2">@Localizer["GovernanceCreate_Step1"]</li>
                    <li class="mb-2">@Localizer["GovernanceCreate_Step2"]</li>
                    <li class="mb-2">@Localizer["GovernanceCreate_Step3"]</li>
                    <li>@Localizer["GovernanceCreate_Step4"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
