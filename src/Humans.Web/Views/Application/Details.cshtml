@model Humans.Web.Models.ApplicationDetailViewModel
@{
    ViewData["Title"] = Localizer["ApplicationDetail_Title"].Value;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">@Localizer["Governance_Title"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Localizer["ApplicationDetail_Details"]</li>
    </ol>
</nav>

<vc:temp-data-alerts />

<div class="row">
    <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>@Localizer["ApplicationDetail_Title"]</h1>
            <span class="badge fs-5 @StatusBadgeExtensions.GetApplicationStatusBadgeClass(Model.Status)">@Localizer["ApplicationStatus_" + Model.Status]</span>
        </div>

        <div class="card mb-4">
            <div class="card-header">@Localizer["ApplicationDetail_ApplicationInfo"]</div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">@Localizer["Governance_Submitted"]</dt>
                    <dd class="col-sm-9">@Model.SubmittedAt.ToString("d MMMM yyyy 'at' HH:mm")</dd>

                    @if (Model.ReviewStartedAt.HasValue)
                    {
                        <dt class="col-sm-3">@Localizer["ApplicationDetail_ReviewStarted"]</dt>
                        <dd class="col-sm-9">@Model.ReviewStartedAt.Value.ToString("d MMMM yyyy")</dd>
                    }

                    @if (Model.ResolvedAt.HasValue)
                    {
                        <dt class="col-sm-3">@Localizer["Governance_Resolved"]</dt>
                        <dd class="col-sm-9">@Model.ResolvedAt.Value.ToString("d MMMM yyyy")</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.ReviewerName))
                    {
                        <dt class="col-sm-3">@Localizer["ApplicationDetail_ReviewedBy"]</dt>
                        <dd class="col-sm-9">@Model.ReviewerName</dd>
                    }
                </dl>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">@Localizer["ApplicationDetail_YourMotivation"]</div>
            <div class="card-body">
                <p class="mb-0" style="white-space: pre-wrap;">@Model.Motivation</p>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.AdditionalInfo))
        {
            <div class="card mb-4">
                <div class="card-header">@Localizer["ApplicationDetail_AdditionalInfo"]</div>
                <div class="card-body">
                    <p class="mb-0" style="white-space: pre-wrap;">@Model.AdditionalInfo</p>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.SignificantContribution))
        {
            <div class="card mb-4">
                <div class="card-header">@Localizer["Application_SignificantContribution"]</div>
                <div class="card-body">
                    <p class="mb-0" style="white-space: pre-wrap;">@Model.SignificantContribution</p>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.RoleUnderstanding))
        {
            <div class="card mb-4">
                <div class="card-header">@Localizer["Application_RoleUnderstanding"]</div>
                <div class="card-body">
                    <p class="mb-0" style="white-space: pre-wrap;">@Model.RoleUnderstanding</p>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ReviewNotes))
        {
            <div class="card mb-4">
                <div class="card-header">@Localizer["ApplicationDetail_ReviewerNotes"]</div>
                <div class="card-body">
                    <p class="mb-0" style="white-space: pre-wrap;">@Model.ReviewNotes</p>
                </div>
            </div>
        }

        @if (Model.CanWithdraw)
        {
            <div class="card border-warning mb-4">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["ApplicationDetail_WithdrawTitle"]</h5>
                    <p class="card-text text-muted">@Localizer["ApplicationDetail_WithdrawDescription"]</p>
                    <form asp-action="Withdraw" asp-route-id="@Model.Id" method="post"
                          data-confirm="@Localizer["ApplicationDetail_WithdrawConfirm"].Value">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-warning">@Localizer["ApplicationDetail_WithdrawButton"]</button>
                    </form>
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        <div class="card">
            @await Html.PartialAsync("_ApplicationHistory", Model.History)
        </div>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary w-100">@Localizer["ApplicationDetail_BackToApplications"]</a>
        </div>
    </div>
</div>
