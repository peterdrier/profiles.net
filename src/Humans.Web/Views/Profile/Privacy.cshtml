@model Humans.Web.Models.PrivacyViewModel
@{
    ViewData["Title"] = Localizer["ProfilePrivacy_Title"].Value;
}

<h1>@Localizer["ProfilePrivacy_Title"]</h1>

<p class="lead">@Localizer["ProfilePrivacy_Lead"]</p>

<vc:temp-data-alerts />

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">@Localizer["ProfilePrivacy_ExportTitle"]</h5>
            </div>
            <div class="card-body">
                <p>@Localizer["ProfilePrivacy_ExportDescription"]</p>
                <ul>
                    <li>@Localizer["ProfilePrivacy_ExportAccountInfo"]</li>
                    <li>@Localizer["ProfilePrivacy_ExportProfileDetails"]</li>
                    <li>@Localizer["ProfilePrivacy_ExportContactFields"]</li>
                    <li>@Localizer["ProfilePrivacy_ExportApplications"]</li>
                    <li>@Localizer["ProfilePrivacy_ExportConsents"]</li>
                    <li>@Localizer["ProfilePrivacy_ExportTeams"]</li>
                    <li>@Localizer["ProfilePrivacy_ExportRoles"]</li>
                </ul>
                <a asp-action="DownloadData" class="btn btn-primary">
                    @Localizer["ProfilePrivacy_DownloadMyData"]
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-4 @(Model.IsDeletionPending ? "border-warning" : "")">
            <div class="card-header @(Model.IsDeletionPending ? "bg-warning text-dark" : "")">
                <h5 class="mb-0">@Localizer["ProfilePrivacy_DeleteTitle"]</h5>
            </div>
            <div class="card-body">
                @if (Model.IsDeletionPending)
                {
                    <div class="alert alert-warning">
                        <strong>@Localizer["ProfilePrivacy_DeletionPending"]</strong><br />
                        @string.Format(Localizer["ProfilePrivacy_DeletionScheduledFor"].Value, Model.DeletionScheduledFor?.ToString("MMMM d, yyyy"))
                    </div>
                    <p>@Localizer["ProfilePrivacy_DeletionAccessRevoked"]</p>
                    <p>@Localizer["ProfilePrivacy_DeletionCancelInfo"]</p>
                    <p class="text-muted"><small>@Localizer["ProfilePrivacy_CancelNoRestore"]</small></p>
                    <form asp-action="CancelDeletion" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-success">
                            @Localizer["ProfilePrivacy_CancelDeletion"]
                        </button>
                    </form>
                }
                else
                {
                    <p>@Localizer["ProfilePrivacy_DeleteDescription"]</p>
                    <ul>
                        <li><strong>@Localizer["ProfilePrivacy_DeleteImmediateRevocation"]</strong></li>
                        <li>@Localizer["ProfilePrivacy_DeleteGracePeriod"]</li>
                        <li>@Localizer["ProfilePrivacy_DeleteAnonymized"]</li>
                        <li>@Localizer["ProfilePrivacy_DeleteRetained"]</li>
                    </ul>
                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        @Localizer["ProfilePrivacy_RequestDeletion"]
                    </button>
                }
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">@Localizer["Privacy_Title"]</h5>
    </div>
    <div class="card-body">
        <p>@Localizer["ProfilePrivacy_DPOContact"]</p>
        <p><strong>@Localizer["ProfilePrivacy_Email"]</strong> <a href="mailto:@(ViewData["DpoEmail"])">@ViewData["DpoEmail"]</a></p>
        <p>
            <a asp-controller="Home" asp-action="Privacy">@Localizer["ProfilePrivacy_ViewFullPolicy"]</a>
        </p>
    </div>
</div>

@if (!Model.IsDeletionPending)
{
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel">@Localizer["ProfilePrivacy_ConfirmDeletion"]</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>@Localizer["ProfilePrivacy_ConfirmDeletionQuestion"]</p>
                    <ul>
                        <li><strong>@Localizer["ProfilePrivacy_DeleteImmediateRevocation"]</strong></li>
                        <li>@Localizer["ProfilePrivacy_DeleteGracePeriod"]</li>
                        <li>@Localizer["ProfilePrivacy_DeleteAnonymized"]</li>
                        <li>@Localizer["ProfilePrivacy_DeleteRetained"]</li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Common_Cancel"]</button>
                    <form asp-action="RequestDeletion" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">@Localizer["ProfilePrivacy_YesDeleteMyAccount"]</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
