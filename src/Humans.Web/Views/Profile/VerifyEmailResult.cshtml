@{
    ViewData["Title"] = Localizer["VerifyEmail_Title"].Value;
    var success = ViewData["Success"] as bool? ?? false;
    var message = ViewData["Message"] as string;
}

<h1>@Localizer["VerifyEmail_Title"]</h1>

@if (success)
{
    <div class="alert alert-success" role="alert">
        @message
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        @message
    </div>
}

@if (User.Identity?.IsAuthenticated == true)
{
    <a asp-action="Emails" class="btn btn-primary">@Localizer["VerifyEmail_GoToSettings"]</a>
}
else
{
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">@Localizer["VerifyEmail_GoHome"]</a>
}
