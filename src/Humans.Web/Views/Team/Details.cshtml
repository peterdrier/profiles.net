@model Humans.Web.Models.TeamDetailViewModel
@{
    ViewData["Title"] = Model.Name;
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">@Localizer["Teams_Title"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
    </ol>
</nav>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">@Model.Name</h4>
                <div>
                    @if (Model.IsSystemTeam)
                    {
                        <span class="badge bg-secondary">@Model.SystemTeamType @Localizer["Teams_Member"]</span>
                    }
                    @if (Model.IsCurrentUserMember)
                    {
                        <span class="badge bg-success">@Localizer["Teams_Member"]</span>
                    }
                    @if (Model.IsCurrentUserLead)
                    {
                        <span class="badge bg-primary">@Localizer["Profile_Lead"]</span>
                    }
                </div>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p class="card-text">@Model.Description</p>
                }
                else
                {
                    <p class="text-muted">@Localizer["TeamDetail_NoDescription"]</p>
                }

                @if (Model.IsSystemTeam)
                {
                    <div class="alert alert-info mb-0">
                        @string.Format(Localizer["TeamDetail_SystemTeamInfo"].Value, Model.SystemTeamType)
                    </div>
                }
            </div>
            <div class="card-footer">
                <small class="text-muted">@Localizer["TeamDetail_Created"] @Model.CreatedAt.ToString("MMMM d, yyyy")</small>
            </div>
        </div>

        @if (Model.Resources.Count > 0)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <span>@Localizer["TeamDetail_Resources"]</span>
                </div>
                <div class="card-body py-2">
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var resource in Model.Resources)
                        {
                            @if (!string.IsNullOrEmpty(resource.Url))
                            {
                                <a href="@resource.Url" target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-outline-primary">
                                    <i class="@resource.IconClass me-1"></i> @resource.Name
                                </a>
                            }
                            else
                            {
                                <span class="btn btn-sm btn-outline-secondary disabled">
                                    <i class="@resource.IconClass me-1"></i> @resource.Name
                                </span>
                            }
                        }
                    </div>
                </div>
            </div>
        }

        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>@string.Format(Localizer["TeamDetail_Members"].Value, Model.Members.Count)</span>
                @if (Model.CanCurrentUserManage)
                {
                    <a asp-controller="TeamAdmin" asp-action="Members" asp-route-slug="@Model.Slug" class="btn btn-sm btn-outline-primary">
                        @Localizer["TeamDetail_ManageMembers"]
                    </a>
                }
            </div>
            <div class="card-body">
                @if (Model.Members.Any())
                {
                    var leads = Model.Members.Where(m => m.IsLead).ToList();
                    var regularMembers = Model.Members.Where(m => !m.IsLead).ToList();

                    @if (leads.Any())
                    {
                        <h6 class="text-muted mb-3">@Localizer["TeamDetail_TeamLeads"]</h6>
                        <div class="row g-3 mb-4">
                            @foreach (var member in leads)
                            {
                                <div class="col-6 col-sm-4 col-md-3">
                                    <div class="text-center">
                                        @if (!string.IsNullOrEmpty(member.EffectiveProfilePictureUrl))
                                        {
                                            <img src="@member.EffectiveProfilePictureUrl" alt="@member.DisplayName" class="rounded-circle mb-2" style="width: 128px; height: 128px; object-fit: cover; border: 3px solid var(--bs-primary);" />
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center text-white mx-auto mb-2" style="width: 128px; height: 128px; font-size: 2.4rem;">
                                                @member.DisplayName[0]
                                            </div>
                                        }
                                        <div class="fw-semibold small">@member.DisplayName</div>
                                        <span class="badge bg-primary">@Localizer["Profile_Lead"]</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    @if (regularMembers.Any())
                    {
                        @if (leads.Any())
                        {
                            <h6 class="text-muted mb-3">@Localizer["Teams_Member"]</h6>
                        }
                        <div class="row g-3">
                            @foreach (var member in regularMembers)
                            {
                                <div class="col-6 col-sm-4 col-md-3">
                                    <div class="text-center">
                                        @if (!string.IsNullOrEmpty(member.EffectiveProfilePictureUrl))
                                        {
                                            <img src="@member.EffectiveProfilePictureUrl" alt="@member.DisplayName" class="rounded-circle mb-2" style="width: 102px; height: 102px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white mx-auto mb-2" style="width: 102px; height: 102px; font-size: 1.9rem;">
                                                @member.DisplayName[0]
                                            </div>
                                        }
                                        <div class="small">@member.DisplayName</div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                }
                else
                {
                    <p class="text-center text-muted mb-0">@Localizer["TeamDetail_NoMembers"]</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">@Localizer["TeamDetail_Actions"]</div>
            <div class="card-body">
                @if (Model.CanCurrentUserJoin)
                {
                    <a asp-action="Join" asp-route-slug="@Model.Slug" class="btn btn-primary w-100 mb-2">
                        @if (Model.RequiresApproval)
                        {
                            <span>@Localizer["TeamDetail_RequestToJoin"]</span>
                        }
                        else
                        {
                            <span>@Localizer["TeamDetail_JoinTeam"]</span>
                        }
                    </a>
                }
                else if (Model.CurrentUserPendingRequestId.HasValue)
                {
                    <div class="alert alert-info mb-2">
                        @Localizer["TeamDetail_PendingApproval"]
                    </div>
                    <form asp-action="WithdrawRequest" asp-route-id="@Model.CurrentUserPendingRequestId" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger w-100" data-confirm="@Localizer["TeamDetail_WithdrawConfirm"].Value">
                            @Localizer["TeamDetail_WithdrawRequest"]
                        </button>
                    </form>
                }
                else if (Model.CanCurrentUserLeave)
                {
                    <form asp-action="Leave" asp-route-slug="@Model.Slug" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger w-100" data-confirm="@Localizer["TeamDetail_LeaveConfirm"].Value">
                            @Localizer["TeamDetail_LeaveTeam"]
                        </button>
                    </form>
                }
                else if (Model.IsCurrentUserMember && Model.IsSystemTeam)
                {
                    <div class="alert alert-secondary mb-0">
                        @Localizer["TeamDetail_SystemMembership"]
                    </div>
                }
            </div>
        </div>

        @if (Model.CanCurrentUserManage)
        {
            <div class="card">
                <div class="card-header">@Localizer["TeamDetail_TeamManagement"]</div>
                <div class="list-group list-group-flush">
                    <a asp-controller="TeamAdmin" asp-action="Requests" asp-route-slug="@Model.Slug" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        @Localizer["TeamDetail_PendingRequests"]
                        @if (Model.PendingRequestCount > 0)
                        {
                            <span class="badge bg-warning">@Model.PendingRequestCount</span>
                        }
                    </a>
                    <a asp-controller="TeamAdmin" asp-action="Members" asp-route-slug="@Model.Slug" class="list-group-item list-group-item-action">
                        @Localizer["TeamDetail_ManageMembers"]
                    </a>
                    <a asp-controller="TeamAdmin" asp-action="Resources" asp-route-slug="@Model.Slug" class="list-group-item list-group-item-action">
                        @Localizer["TeamDetail_ManageResources"]
                    </a>
                    <a asp-controller="Admin" asp-action="LegalDocuments" asp-route-teamId="@Model.Id" class="list-group-item list-group-item-action">
                        @Localizer["TeamDetail_ManageConsents"]
                    </a>
                </div>
            </div>
        }
    </div>
</div>
