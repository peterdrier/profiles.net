@model List<Humans.Web.Models.ApplicationHistoryViewModel>

<div class="card-header">@Localizer["ApplicationDetail_History"]</div>
<div class="card-body">
    @if (Model.Count == 0)
    {
        <p class="text-muted mb-0">@Localizer["ApplicationDetail_NoHistory"]</p>
    }
    else
    {
        <ul class="list-unstyled mb-0">
            @foreach (var entry in Model)
            {
                <li class="mb-3 pb-3 border-bottom">
                    <div class="d-flex justify-content-between">
                        <strong>@entry.Status</strong>
                        <small class="text-muted">@entry.ChangedAt.ToString("d MMM yyyy")</small>
                    </div>
                    <small class="text-muted">@Localizer["ApplicationDetail_By"] @entry.ChangedBy</small>
                    @if (!string.IsNullOrEmpty(entry.Notes))
                    {
                        <p class="mt-1 mb-0 small">@entry.Notes</p>
                    }
                </li>
            }
        </ul>
    }
</div>
